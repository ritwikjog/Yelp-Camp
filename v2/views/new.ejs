<% include partials/header %>

 <div class="container">
        <h1 class="text-center" style="margin-top:10px;">Submit a new site here!</h1>
        <form action="/campsites" method="POST">
             <div class="form-group" style="width:30%; margin:10px auto;">
                 <input class="form-control" type="text" placeholder="Campsite Name" name="name">
             </div>
             <div class="form-group" style="width:30%; margin:10px auto;">
                 <input class="form-control" type="text" placeholder="Image url" name="image">
             </div>
             <div class="form-group" style="width:30%; margin:10px auto;">
                 <input class="form-control" type="text" placeholder="Description" name="desc">
             </div>
             <div class="form-group" style="width:30%; margin:0 auto;">
                 <button class="btn btn-lg btn-primary btn-block text-center">Submit!</button>
             </div>
        </form>
        <a class="btn btn-warning" style="margin: 20px auto;" href="/">Back</a>
    </div>
    
