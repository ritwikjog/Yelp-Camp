<% include partials/header %>

<div class="container">
         <div class="jumbotron">
         <h1>Welcome to YelpCamp!</h1>
         <a href="/campsites/new" class="btn btn-lg btn-primary">Add a new campground</a>
    </div>
        <div class="row">
            <% camps.forEach(function(camp){ %>
            <figure class="col-md-4">
                 <img src ="<%=camp.image%>" class="img-thumbnail" style="width:500px;"> 
                <figcaption class="figure-caption text-center"><%= camp.name %></figcaption>
                <a href="/campsites/<%= camp._id %>" class="btn btn-primary btn-sm" style:"margin: 0 auto;">See More</a>
            </figure>
        <% }); %>
        </div>
        
   </div>

<% include partials/footer %>
